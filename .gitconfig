[core]
	editor = nvim
[push]
	default = current
[user]
	email = fortunatof@ryanair.com
	name = Fabrizio Fortunato
[branch]
	autosetuprebase = always
  autosquash = true
[pull]
	rebase = true
[core]
  pager = delta
[interactive]
  diffFilter = delta --color-only
[delta]
  navigate = true  # use n and N to move between diff sections
[merge]
  conflictstyle = diff3
[diff]
  colorMoved = default
[http]
	proxy = http://internalproxy.corp.ryanair.com:3128
