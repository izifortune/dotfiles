yabai -m rule --add title="Microsoft Teams Notification" window_border=off
yabai -m rule --add title="Microsoft Teams Notification" manage=off
yabai -m rule --add label=ignoreTeamsNotification app="Microsoft Teams" title="Microsoft Teams Notification" manage=off
yabai -m signal --add \
    event=window_focused \
    app='^Microsoft Teams$' \
    title='^Microsoft Teams Notification$' \
    action='yabai -m window --focus mouse > /dev/null 2>&1'


